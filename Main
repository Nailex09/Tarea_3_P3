
def suma(a, b):
    return a + b

def resta(a, b):
    return a - b

if __name__ == "__main__":
    print("Calculadora básica")
    num1 = float(input("Ingrese el primer número: "))
    num2 = float(input("Ingrese el segundo número: "))
    print(f"Suma: {suma(num1, num2)}")
    print(f"Resta: {resta(num1, num2)}")

